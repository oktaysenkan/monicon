{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },

    "ui#build": {
      "dependsOn": ["core#build"]
    },
    "vue#build": {
      "dependsOn": ["core#build"]
    },

    "babel-plugin#build": {
      "dependsOn": ["core#build"]
    },
    "metro#build": {
      "dependsOn": ["core#build"]
    },
    "vite#build": {
      "dependsOn": ["core#build"]
    },
    "rollup#build": {
      "dependsOn": ["vite#build"]
    },
    "esbuild#build": {
      "dependsOn": ["core#build"]
    },
    "webpack#build": {
      "dependsOn": ["core#build"]
    },
    "rspack#build": {
      "dependsOn": ["core#build", "webpack#build"]
    },
    "nuxt#build": {
      "dependsOn": ["core#build", "vue#build"]
    },

    "native#build": {
      "dependsOn": [
        "babel-plugin#build",
        "metro#build",
        "webpack#build",
        "ui#build"
      ]
    },
    "next#build": {
      "dependsOn": ["webpack#build", "ui#build"]
    },
    "vite-react#build": {
      "dependsOn": ["vite#build", "ui#build"]
    },
    "rspack-react#build": {
      "dependsOn": ["rspack#build", "ui#build"]
    },
    "rollup-react#build": {
      "dependsOn": ["rollup#build", "ui#build"]
    },
    "vite-vue#build": {
      "dependsOn": ["vite#build", "vue#build"]
    },
    "nuxt-app#build": {
      "dependsOn": ["nuxt#build"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "clean": {
      "cache": false
    }
  }
}
