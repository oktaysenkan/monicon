{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "babel-plugin#build": {
      "dependsOn": ["core#build"]
    },
    "metro#build": {
      "dependsOn": ["core#build"]
    },
    "vite#build": {
      "dependsOn": ["core#build"]
    },
    "webpack#build": {
      "dependsOn": ["core#build"]
    },

    "native#build": {
      "dependsOn": [
        "babel-plugin#build",
        "metro#build",
        "webpack#build",
        "ui#build"
      ]
    },
    "next#build": {
      "dependsOn": ["webpack#build", "ui#build"]
    },
    "vite-react#build": {
      "dependsOn": ["vite#build", "ui#build"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "clean": {
      "cache": false
    }
  }
}
